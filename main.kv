GerenciadorDeTelas:
    TelaInicial:
        name: 'telainicial'
    PlayersName:
        name: 'playersName'
    Jogo:
        name: 'jogo'
    TelaFinal:
        name: 'telafinal'

<TelaInicial>
    BoxLayout:
        canvas:
            Color:
                rgba: 1,0,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: 'Bem Vindo!'
            size: 100, 100
        BoxLayout:
            Button:
                text: 'Jogar'
                on_release: app.root.current = 'playersName'
            Button:
                text: 'Sair'
                on_release: app.stop()

<PlayersName>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Digite o nome dos jogadores'

        BoxLayout:
            orientation: 'vertical'

            TextInput:
                id: player_1
                hint_text: "Nome do primeiro jogador"
                multiline: False


            TextInput:
                id: player_2
                hint_text: "Nome do segundo jogador"
                multiline: False

            Button:
                text: 'Confirmar'
                on_release:
                    root.get_name_player(player_1.text, player_2.text)
                    app.root.current = 'jogo'

<Jogo>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'PLAYER_1 - 1'
        Label:
            text: 'empates - 1'
        Label:
            text: 'PLAYER_2 - 1'

    BoxLayout:
        GridLayout:
            cols: 3
            rows: 3

            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(1, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(2, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(3, self)

            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(4, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(5, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(6, self)

            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(7, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(8, self)
            Button:
                text: ""
                size_hint: 0.3,0.3
                on_release: root.jogada(9, self)


<TelaFinal>
    BoxLayout:
        Button:
            text: 'Jogar de novo'
            on_release: app.root.current = 'jogo'